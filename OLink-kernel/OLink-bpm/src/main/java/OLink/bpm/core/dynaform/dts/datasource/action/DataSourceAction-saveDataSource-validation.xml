<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE validators PUBLIC
  		"-//OpenSymphony Group//XWork Validator 1.0//EN" 
  		"http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">

<validators>
	<field name="content.name">
		<field-validator type="requiredstring">
			<message>{*[page.name.notexist]*}!</message>
		</field-validator>
	</field>
	<field name="content.url">
		<field-validator type="requiredstring">
			<message>{*[page.url.notexist]*}!</message>
		</field-validator>
	</field>
	
	<field name="content.driverClass">
		<field-validator type="requiredstring">
			<message>{*[page.driver.notexist]*}!</message>
		</field-validator>
	</field>
	<field name="content.dbType">
		<field-validator type="int">
			<param name="min">1</param>
			<message>{*[page.type.notexist]*}!</message>
		</field-validator>
	</field>
	<field name="content.applicationid">
		<field-validator type="requiredstring">
			<message>{*[save.current.application]*}</message>
		</field-validator>
	</field>
</validators>
